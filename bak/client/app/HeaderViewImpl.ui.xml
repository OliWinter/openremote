<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:with field="constants" type="org.openremote.manager.client.i18n.ManagerConstants"/>
    <ui:with field="themeStyle" type="org.openremote.manager.client.ThemeStyle"/>

    <ui:style>
        .navBar {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1em;
        }

        .userControls {
            width: 44%;
            display: flex;
            align-items: center;
            justify-content: flex-end;
        }

        .userControls > * {
            margin: 0 0 0 1em;
        }
    </ui:style>

    <g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{style.navBar}">

            <m:MaterialButton ui:field="itemMap"
                              addStyleNames="{themeStyle.NavItemMain}"
                              waves="LIGHT"
                              text="{constants.locate}"
                              iconType="MAP"/>

            <m:MaterialButton ui:field="itemAssets"
                              addStyleNames="{themeStyle.NavItemMain}"
                              waves="LIGHT"
                              text="{constants.manage}"
                              iconType="APPS"/>

            <m:MaterialButton ui:field="itemFlows"
                              addStyleNames="{themeStyle.NavItemMain}"
                              waves="LIGHT"
                              iconType="DEVELOPER_MODE"
                              text="{constants.connect}"/>

            <g:HTMLPanel addStyleNames="{style.userControls}">
                <m:MaterialLabel ui:field="signinText"/>
                <m:MaterialButton ui:field="logoutButton"
                                  addStyleNames="{themeStyle.NavItem}"
                                  waves="LIGHT"
                                  text="{constants.logout}"/>
            </g:HTMLPanel>

        </g:HTMLPanel>

    </g:HTMLPanel>

</ui:UiBinder>