<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:with field="constants" type="org.openremote.manager.client.i18n.ManagerConstants"/>
    <ui:with field="themeStyle" type="org.openremote.manager.client.ThemeStyle"/>

    <g:ScrollPanel>
        <g:VerticalPanel>

            <m:MaterialChip letter="A" letterColor="white" letterBackgroundColor="green" text="Room 1" iconType="HOME"/>
            <m:MaterialChip letter="A" letterColor="white" letterBackgroundColor="green" text="Room 2" iconType="HOME"/>
            <m:MaterialChip letter="A" letterColor="white" letterBackgroundColor="green" text="Room 3" iconType="HOME"/>

            <m:MaterialChip letter="S" letterColor="white" letterBackgroundColor="green" text="Sensor A" iconType="CAST"/>
            <m:MaterialChip letter="S" letterColor="white" letterBackgroundColor="red" text="Sensor B" iconType="CAST"/>
            <m:MaterialChip letter="S" letterColor="black" letterBackgroundColor="yellow" text="Sensor C" iconType="CAST"/>

        </g:VerticalPanel>
    </g:ScrollPanel>

</ui:UiBinder>