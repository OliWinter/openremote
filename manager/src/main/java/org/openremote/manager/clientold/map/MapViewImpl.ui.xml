<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:o="urn:import:org.openremote.manager.client.map"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .mapContainer {
            position: absolute;
            top: 0;
            bottom: 0;
            width: 100%;
            background-color: white;
        }
    </ui:style>

    <o:MapWidget ui:field="mapWidget" addStyleNames="{style.mapContainer}"></o:MapWidget>

</ui:UiBinder>